<%- include('./partials/header.ejs') %>
<h1>Absence List</h1>
<form action="/absent" method="POST" style="width: 20%">
	<div class="form-group">
    <label for="exampleInputEmail1" style="font-size: 25px; text-align: center;">Group</label>
    <input required type="text" name="Group" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
  </div>
<% names.forEach(name => { %>
    <div class="input-group mb-3" style="margin-top: 15px;">
        <div class="input-group-text">
          <input class="form-check-input mt-0" type="checkbox" name="present" value="<%= name.name %>" aria-label="Checkbox for following text input">
        </div>
        <input disabled class="form-control" aria-label="Text input with checkbox" value="<%= name.name %>">
      </div>
<% }) %>
<button class="btn btn-success btn-block" style="margin-top: 15px; width: 100vw;">Submit</button>
</form>
